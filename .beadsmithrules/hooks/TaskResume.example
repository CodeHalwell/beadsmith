#!/usr/bin/env bash

echo "TaskResume running inside local beadsmith/.beadsmithrules/hooks/ directory"

input=$(cat)
echo $input | jq .

for i in {1..5}; do
  sleep 1
  echo "$i"
done

cat <<EOF
{
  "cancel": false,
  "contextModification": "TaskResume response from the local beadsmith/.beadsmithrules/hooks/ directory.",
  "errorMessage": "TaskResume hook custom errorMessage"
}
EOF
